
<div id="results_area" style="display:none;">
  <div class="half-column my-column">
    <div class="player-heading"><span class="myName"></span> (You)</div>
    <div class="playerGuesses" id="myGuesses"></div>

  </div>

  <div class="half-column opponent-column">
    <div class="player-heading"><span class="opponent_name"></span></div>
    <div class="playerGuesses" id="opponentGuesses"></div>

  </div>

</div>


<div class="modal fade">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <img class="result-image" />
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary new-game-button">Play again</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>